<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_audio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mOutAudioRl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_pale_grey"
        android:padding="5dp"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/mPlayPauseOut"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mPlayOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_audio_play" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mPauseOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_audio_pause"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/mSeekbarLayoutOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/mPlayPauseOut"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/mSeekbarOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mRunTimeOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text="00:00"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text=" / "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mTotalTimeOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text="00:00"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />
            </LinearLayout>

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mOutAudioTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:textColor="@color/msg_time"
                android:textSize="12sp" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mInAudioRl"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/background_pale_grey"
        android:padding="8dp"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/mPlayPauseIn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mPlayIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_audio_play" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mPauseIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_audio_pause"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/mSeekbarLayoutIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/mPlayPauseIn"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/mSeekbarIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mRunTimeIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text="00:00"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text=" / "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mTotalTimeIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text="00:00"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />
            </LinearLayout>

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mInAudioTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:textColor="@color/msg_time"
                android:textSize="12sp" />

        </FrameLayout>


    </RelativeLayout>

</LinearLayout>
