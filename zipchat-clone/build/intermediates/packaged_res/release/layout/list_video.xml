<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mVideoLl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mSendVideoRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/mCardSendVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mSendVideo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/thumbnail_video" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle_filled_black_24dp" />


            <ProgressBar
                android:id="@+id/mProgressSendVideo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center" />

        </android.support.v7.widget.CardView>

        <com.chat.zipchat.clone.CustomText.CustomRegularTextView
            android:id="@+id/mSendVideoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mCardSendVideo"
            android:layout_marginRight="8dp"
            android:textColor="@color/msg_time"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mReceiveVideoRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/mCardReceiveVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mReceiveVideo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/thumbnail_video" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle_filled_black_24dp" />

            <ProgressBar
                android:id="@+id/mProgressReceiveVideo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center" />


        </android.support.v7.widget.CardView>

        <com.chat.zipchat.clone.CustomText.CustomRegularTextView
            android:id="@+id/mReceiveVideoTime"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mCardReceiveVideo"
            android:gravity="end"
            android:textColor="@color/msg_time"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>
