<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mBottomGifStrikers">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRvGif"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRvStrikers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/mProgressGifStrikers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <com.chat.zipchat.clone.CustomText.CustomBoldTextView
        android:id="@+id/mNoInternetGifStrikers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_internet"
        android:textColor="#909090"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/mBottomGifStrikers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gif_background"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/mSearchGifStickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_search_grey" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mImgBtnGif"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_gif_grey" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mImgBtnStickers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:src="@drawable/ic_sticker_grey" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
