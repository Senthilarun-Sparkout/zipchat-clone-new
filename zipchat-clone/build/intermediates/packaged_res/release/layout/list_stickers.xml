<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mStickersLl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mSendStickersRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/mSendStickers"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp" />

        <com.chat.zipchat.clone.CustomText.CustomRegularTextView
            android:id="@+id/mSendStickersTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mSendStickers"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/msg_time"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mReceiveStickersRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/mReceiveStickers"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="15dp" />

        <com.chat.zipchat.clone.CustomText.CustomRegularTextView
            android:id="@+id/mReceiveStickersTime"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mReceiveStickers"
            android:gravity="end"
            android:textColor="@color/msg_time"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
