<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mDocumentLl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/mSendDocumentCl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:visibility="gone"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="7dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mSendDocument"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/doc_icon" />

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/mSendDocument"
                android:text="Document"
                android:textSize="15sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <com.chat.zipchat.clone.CustomText.CustomRegularTextView
        android:id="@+id/mSendDocumentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mSendDocumentCl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:textColor="@color/msg_time"
        android:textSize="12sp"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/mReceiveDocumentCl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:visibility="gone"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="7dp">

            <ImageView
                android:id="@+id/mReceiveDocument"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="7dp"
                android:src="@drawable/doc_icon" />

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/mReceiveDocument"
                android:text="Document"
                android:textSize="15sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <com.chat.zipchat.clone.CustomText.CustomRegularTextView
        android:id="@+id/mReceiveDocumentTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mReceiveDocumentCl"
        android:layout_marginRight="80dp"
        android:gravity="end"
        android:textColor="@color/msg_time"
        android:textSize="12sp"
        android:visibility="gone" />


</RelativeLayout>
