<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.chat.zipchat.clone.CustomText.CustomBoldTextView
        android:id="@+id/tv_group_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_dialog_group_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_group_dialog_title"
        android:layout_margin="10dp"
        android:selectAllOnFocus="true" />

    <com.chat.zipchat.clone.CustomText.CustomRegularTextView
        android:id="@+id/tv_dialog_group_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_dialog_group_subject"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:text="@string/group_desc_content"
        android:selectAllOnFocus="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_above="@id/ll_group_dialog"
        android:background="@color/tab_grey" />

    <LinearLayout
        android:id="@+id/ll_group_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_group_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:text="@string/cancel"
            android:textAllCaps="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="@color/tab_grey" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_group_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:text="@string/ok" />

    </LinearLayout>


</RelativeLayout>
