<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mImageLl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mSendImageRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/mCardSendImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mSendImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/thumbnail_photo" />

            <ProgressBar
                android:id="@+id/mProgressSendImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />

        </android.support.v7.widget.CardView>

        <com.chat.zipchat.clone.CustomText.CustomRegularTextView
            android:id="@+id/mSendImageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mCardSendImage"
            android:layout_marginRight="8dp"
            android:textColor="@color/msg_time"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mReceiveImageRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/mCardReceiveImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mReceiveImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/thumbnail_photo" />

            <ProgressBar
                android:id="@+id/mProgressReceiveImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />


        </android.support.v7.widget.CardView>

        <com.chat.zipchat.clone.CustomText.CustomRegularTextView
            android:id="@+id/mReceiveImageTime"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mCardReceiveImage"
            android:gravity="end"
            android:textColor="@color/msg_time"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>
