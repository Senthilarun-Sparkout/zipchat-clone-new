<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <RelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff2f1f2">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Zipchat Voice Call"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_app_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_call_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_caller_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="state"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_options"
        android:layout_below="@+id/layout_info"
        android:background="@android:color/darker_gray"
        android:scaleType="center"
        android:src="@drawable/splash" />

    <RelativeLayout
        android:id="@+id/layout_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff2f1f2"
        android:gravity="center"
        android:padding="15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_call_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_end_call"
            android:padding="30dp"
            android:src="@drawable/ic_call_end" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_call_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/iv_call_end"
            android:background="@drawable/ic_bg_accept_call"
            android:padding="30dp"
            android:src="@drawable/ic_call_white" />

    </RelativeLayout>

</RelativeLayout>