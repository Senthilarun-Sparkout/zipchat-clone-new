<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRlListMobile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mListImgMobile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/defult_user" />

    <LinearLayout
        android:id="@+id/mLlCredentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/mListImgMobile"
        android:orientation="vertical"
        android:padding="8dp">

        <com.chat.zipchat.clone.CustomText.CustomBoldTextView
            android:id="@+id/mListTxtMobileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/popup_text_color"
            android:textSize="14sp" />

        <com.chat.zipchat.clone.CustomText.CustomRegularTextView
            android:id="@+id/mListTxtMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mLlCredentials"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/mListImgMobile"
        android:background="@color/dashed" />

</RelativeLayout>



