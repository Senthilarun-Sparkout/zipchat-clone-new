<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/popup_background"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mPopupHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/you_have_sent"
                android:textColor="@color/popup_text_color"
                android:textSize="16sp" />

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mPopupAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="26sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mRlPopupUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mTxtPopupUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sent_to"
                android:textColor="@color/popup_text_color"
                android:textSize="12sp" />

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mPopupNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mRlStatusUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/popup_text_color"
                android:textSize="12sp" />


            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mPopupStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/successful"
                android:textColor="@color/successful_color"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/background_underline_dashed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mTxtPopupSendAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_sent"
                android:textSize="16sp" />

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mPopupSendAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mRlTransactionFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_fee"
                android:textSize="16sp" />

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mPopupTransactionFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/background_underline_dashed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                android:id="@+id/mPopupTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/background_underline_dashed" />

        <com.chat.zipchat.clone.CustomText.CustomRegularTextView
            android:id="@+id/mPopupDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/mPopupDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/btn_background"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:src="@drawable/popup_transaction" />


</RelativeLayout>
