<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mPaymentLl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mSendPaymentRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/mCardSendPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@color/light_grey">

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mSendPaymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/msg_text"
                    android:textSize="24sp" />

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mSendPaymentDollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/mSendPaymentAmount"
                    android:background="@drawable/circle_doller"
                    android:gravity="center"
                    android:src="@drawable/circle_doller"
                    android:text="$"
                    android:textColor="@color/white" />

                <com.chat.zipchat.clone.CustomText.CustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:text="Complete"
                    android:textColor="@color/complete_color"
                    android:textSize="14sp" />

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mSendPaymentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:padding="5dp"
                    android:textColor="@color/msg_time"
                    android:textSize="12sp" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mReceivePaymentRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/mCardReceivePayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@color/light_orange">

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mReceivePaymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:gravity="top"
                    android:textColor="@color/msg_text"
                    android:textSize="24sp" />

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mReceivePaymentDollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/mReceivePaymentAmount"
                    android:background="@drawable/circle_doller"
                    android:gravity="center"
                    android:src="@drawable/circle_doller"
                    android:text="$"
                    android:textColor="@color/white" />

                <com.chat.zipchat.clone.CustomText.CustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:text="Complete"
                    android:textColor="@color/complete_color"
                    android:textSize="14sp" />

                <com.chat.zipchat.clone.CustomText.CustomRegularTextView
                    android:id="@+id/mReceivePaymentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:padding="5dp"
                    android:textColor="@color/msg_text"
                    android:textSize="12sp" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

</LinearLayout>
